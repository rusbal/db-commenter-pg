<div class="row">
  <div class="col-4 offset-4">
    <%= form_with url: signin_index_path, local: true do |f| %>
      <div class="form-group">

        <% if defined? @error_message %>
          <%= @error_message %>
        <% else %>
          <%= f.label :password %>
        <% end %>

        <%= f.password_field :password, class: "form-control" %>

        <% if "2020-04-09".to_date >= Date.current %>
          <small id="passwordHelp" class="form-text text-muted">Password: thequickbrownfox (hides in 1 week)</small>
        <% end %>
      </div>
      <%= f.submit "Sign in" %>
    <% end %>
  </div>
</div>
